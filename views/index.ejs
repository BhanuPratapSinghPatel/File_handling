<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-green-300 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input type="text" name="title" class="block mt-2 px-5 py-4 bg-green-900 w-full rounded-md" placeholder="Title" required>
                <textarea name="content" class="block mt-2 px-5 py-4 resize-none bg-green-900 w-full rounded-md" placeholder="Content" required></textarea>
                <input type="submit" value="create task" class="block mt-2 px-5 py-4 bg-green-900 rounded-md">
            </form>
        </div>
        <div class="task p-10 flex gap-5 flex-wrap">
            <% if(files.length) { %>
                <!-- <h2>Total tasks: <%= files.length %></h2> -->
                <% files.forEach(function(file) { %>
                    <div class="w-72 px-4 py-5 bg-green-900 rounded-md">
                        <h1><%= file %></h1>
                        <div class="flex justify-between ">
                            <a class="text-blue-400" href="/file/<%= file %>">Read More</a>
                            <a class="text-blue-400" href="/edit/<%= file %>">Edit</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h1 class="w-72 px-4 py-5 bg-green-900 rounded-md">No task yet!!</h1>
            <% } %>
        </div>
    </div>
</body>
</html>
